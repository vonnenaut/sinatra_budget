<table id="income">
  <div class="table_header">
    <a class="add" href="/income/new"><button>Add</button></a>
  </div>

  <% @income_items.each_pair do |category, amount| %>
    <tr>
      <td><%= category %></td>
      <td><%= amount %></td>
      <td><a href="/income/edit/<%= category %>">edit</a></td>
      <td>
        <form action="/income/delete/<%= category %>" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% end %>

  <tr>
    <td>Total Income:</td>
    <td><%= @total %></td>
  </tr>

</table>

<div id="pie">
  <div>
    <%= @chart %>
  </div>
</div>

<% content_for :header_links do %>
  <h2>Income At-a-glance</h2>
  <form>
    <div id="mode">
      <a href="/spending">Spending</a>
      <a href="/income">Income</a>
      <a href="/combined">Combined</a>
    </div>
  </form>
<% end %>