<table id="income">
  <thead>
    <tr>
      <th class="table_header">
        <td><a class="add" href="/income/new"><button>Add</button></a></td>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @income_items.each_pair do |category, amount| %>
      <tr>
        <td><%= category %></td>
        <td><%= amount %></td>
        <td><a class="edit" href="/income/edit/<%= category %>">edit</a></td>
        <td>
          <form action="/income/delete/<%= category %>" method="post" class="delete">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% end %>

    <tr>
      <td>Total Income:</td>
      <td><%= @total %></td>
    </tr>
  </tbody>

</table>

<div id="pie">
  <div>
    <%= @chart %>
  </div>
</div>

<% content_for :header_links do %>
  <h2>Income At-a-glance</h2>
<% end %>