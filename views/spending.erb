<table id="spending">
  <thead>
    <tr>
      <th class="table_header">
        <td><a class="add" href="/spending/new"><button>Add</button></a></td>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @spending_items.each_pair do |category, amount| %>
      <tr>
        <td><%= category %></td>
        <td><%= amount %></td>
        <td><a class="edit" href="/spending/edit/<%= category %>">edit</a></td>
        <td><form action="/spending/delete/<%= category %>" method="post" class="delete">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>Total:</td>
      <td><%= @total %></td>
    </tr>
  </tbody>
</table>

<div id="pie">
  <div>
    <%= @chart %>
  </div>
</div>

<% content_for :header_links do %>
  <h2>Spending At-a-glance</h2>
<% end %>